<ui:DialogViewBase
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:UI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="UI.UserInsertingDialog"
        Title="UserInsertingDialog" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Логин"/>
        <TextBox x:Name="LoginTextBox" Grid.Column="1" Grid.Row="0"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Пароль"/>
        <TextBox x:Name="PasswordTextBox" Grid.Column="1" Grid.Row="1"/>
        <Label Grid.Column="0" Grid.Row="2" Content="Фамилия"/>
        <TextBox x:Name="SurnameTextBox" Grid.Column="1" Grid.Row="2"/>
        <Label Grid.Column="0" Grid.Row="3" Content="Имя"/>
        <TextBox x:Name="NameTextBox" Grid.Column="1" Grid.Row="3"/>
        <Label Grid.Column="0" Grid.Row="4" Content="Отчество"/>
        <TextBox x:Name="LastNameTextBox" Grid.Column="1" Grid.Row="4"/>
        <Label Grid.Column="0" Grid.Row="5" Content="Должность"/>
        <TextBox x:Name="PositionTextBox" Grid.Column="1" Grid.Row="5"/>
        <Button x:Name="CancelButton" Grid.Column="0" Grid.Row="6" Content="Отмена" IsCancel="True"/>
        <Button x:Name="OkButton" Grid.Column="1" Grid.Row="6" Content="ОК" IsDefault="True" Click="OkButton_OnClick"/>
    </Grid>
</ui:DialogViewBase>

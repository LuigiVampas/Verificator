<ui:DialogViewBase x:Class="UI.UserInsertingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:UI"
        Title="UserInsertingDialog" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Логин"/>
        <TextBox Name="LoginTextBox" Grid.Column="1" Grid.Row="0"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Пароль"/>
        <TextBox Name="PasswordTextBox" Grid.Column="1" Grid.Row="1"/>
        <Label Grid.Column="0" Grid.Row="2" Content="Фамилия"/>
        <TextBox Name="SurnameTextBox" Grid.Column="1" Grid.Row="2"/>
        <Label Grid.Column="0" Grid.Row="3" Content="Имя"/>
        <TextBox Name="NameTextBox" Grid.Column="1" Grid.Row="3"/>
        <Label Grid.Column="0" Grid.Row="4" Content="Отчество"/>
        <TextBox Name="LastNameTextBox" Grid.Column="1" Grid.Row="4"/>
        <Label Grid.Column="0" Grid.Row="5" Content="Должность"/>
        <TextBox Name="PositionTextBox" Grid.Column="1" Grid.Row="5"/>
        <Button Name="CancelButton" Grid.Column="0" Grid.Row="6" Content="Отмена" IsCancel="True"/>
        <Button Name="OkButton" Grid.Column="1" Grid.Row="6" Content="ОК" IsDefault="True" Click="OkButton_OnClick"/>
    </Grid>
</ui:DialogViewBase>

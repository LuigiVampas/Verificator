<ui:DialogViewBase x:Class="UI.PasswordEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:UI"
        Title="Изменение пароля" Height="143.021" Width="272.34">
    <Grid x:Name="PasswordsGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="139*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Height="30" Margin="0,20,10,21" Width="110">Новый пароль</Label>
        <TextBox Grid.Column="1" Grid.Row="0" Margin="14,24,7,25" Height="22">
            <TextBox.Text>
                <Binding Path="NewPassword" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <Button Grid.Column="0" Grid.Row="1" Click="ButtonBase_OnClick" Margin="20,10,23,8">OК</Button>
        <Button Grid.Column="1" Grid.Row="1" IsCancel="True" Margin="31,10,24,8">Отмена</Button>
    </Grid>
</ui:DialogViewBase>

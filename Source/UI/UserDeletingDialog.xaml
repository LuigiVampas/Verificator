<ui:DialogViewBase x:Class="UI.UserDeletingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:UI"
        Title="UserDeletingDialog" Height="165.958" Width="272.34"
        ResizeMode="NoResize">
    <Grid RenderTransformOrigin="0.496,0.73" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition MaxHeight="40"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="20"
            FontSize="14" Text="Вы действительно хотите удалить этого пользователя?" 
            TextWrapping="WrapWithOverflow" BorderThickness="0" TextAlignment="Center"/>
        <Button Name="NoButton" Content="Нет" Grid.Column="0" Grid.Row="1" MaxWidth="60" Margin="0 0 0 5" IsCancel="True"/>
        <Button Name="YesButton" Content="Да" Grid.Column="1" Grid.Row="1" MaxWidth="60" Margin="0 0 0 5" IsDefault="True" Click="YesButton_OnClick"/>
    </Grid>
</ui:DialogViewBase>
